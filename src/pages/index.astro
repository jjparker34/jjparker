.link-text a {
  position: relative;
  font-weight: 700;
  font-size: 0.85rem;
  text-decoration: none;  
  color: #0050c8;
}

.link-text a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -1.3px;         
  width: 100%;
  height: 2px;
  background-color: currentColor;
  
  transform: scaleX(0);   
  transform-origin: left;
  transition: transform 0.25s ease-out;
}

.link-text a:hover::after {
  transform: scaleX(1);
}

.small-icon-cell {
