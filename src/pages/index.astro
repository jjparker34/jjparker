<style>
  :root {
    --bg-page: #111111;
    --bg-sheet: #ffffff;
    --border: #000000;
    --green-header: #1f7f3b;
    --yellow: #ffe600;
    --grey: #d9d9d9;
  }

  body {
    margin: 0;
    background: var(--bg-page);
    font-family: system-ui, sans-serif;
  }

  .page {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    padding: 1.5rem;
  }

  .sheet {
    background: var(--bg-sheet);
    border: 4px solid var(--border);
    max-width: 1280px;
    width: 100%;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.7);
    height: 833px;
    min-height: 100;
    overflow: hidden;
  }

  /* HEADER */
  .sheet-top {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    background: #000;
    color: #fff;
    border-bottom: 3px solid var(--border);
  }

  .sheet-top-left,
  .sheet-top-right {
    padding: 0.4rem 0.8rem;
    display: flex;
    flex-direction: column;
    font-size: 0.8rem;
  }

  .sheet-title {
    font-size: 1.8rem;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-align: center;
    padding-top: 0.25rem;
  }

  .small-label {
    font-weight: 600;
  }

  .game-name,
  .game-date {
    margin-top: 0.15rem;
    font-weight: 700;
    background: #fff;
    color: #000;
    padding: 0.15rem 0.35rem;
  }

  /* MAIN GRID */
  .sheet-grid {
  display: grid;
  grid-template-columns: 260px 1fr 260px; /* Left / Middle / Right */
  gap: 0;
  align-items: start;
}

  .col {
    border-left: 4px solid var(--border);
  }

  .col:first-child {
    border-left: none;
  }

  .panel {
    border-bottom: 4px solid var(--border);
  }

  .panel-header {
    padding: 0.2rem;
    font-weight: 800;
    text-align: center;
    text-transform: uppercase;
    border-bottom: 2px solid var(--border);
    font-size: 0.85rem;
  }

  .black-header { background: black; color: white; }
  .green-header { background: var(--green-header); color: white; }
  .yellow-header { background: var(--yellow); color: black; }

  .panel-subheader {
    padding: 0.3rem;
    font-weight: 700;
    background: var(--grey);
    border-bottom: 2px solid var(--border);
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  .panel-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.75rem;
  }

  .panel-table th,
  .panel-table td {
    border: 1px solid #000;
    padding: 0.1rem 0.25rem;
    height: 20px;
  }

  /* THREE COLUMN MID-SECTION */
  .three-col-headings {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    text-align: center;
    background: #f0f0f0;
    border-bottom: 1px solid #000;
  }

  .three-col-body {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .three-col-body .cell {
    border-left: 1px solid #000;
    border-bottom: 1px solid #000;
    min-height: 1.25rem;
  }

  .three-col-body .cell:nth-child(3n + 1) {
    border-left: none;
  }

  /* ⭐ TOPSTER PANEL ⭐ */
  .topsters-panel {
    min-height: 250px;
    display: flex;
    flex-direction: column;
  }

  .topsters-content {
    flex: 1;
    padding: 0.25rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .topsters-content img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    display: block;
  }

.icon-img {
