---
const today = new Date();
const month = today.getMonth() + 1;
const day = today.getDate();
const year = today.getFullYear();
const formattedDate = `${month}/${day}/${year}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Jivon Parker</title>
  </head>

  <body>
    <main class="page">
      <div class="sheet">

        <!-- TOP HEADER BAR -->
        <header class="sheet-top">
          <div class="sheet-top-left">
            <div class="small-label">Game</div>
            <div class="game-name">SPRING GAME</div>
          </div>
          <div class="sheet-top-center">
            <div class="sheet-title">Jivon Parker's Call Sheet</div>
          </div>
          <div class="sheet-top-right">
            <div class="small-label">Date</div>
            <div class="game-date" id="live-date"></div>
          </div>
        </header>

        <!-- MAIN GRID: 3 BIG COLUMNS (LEFT / MIDDLE / RIGHT) -->
        <div class="sheet-grid">

          <!-- LEFT COLUMN -->
          <div class="col col-left">

            <section class="panel">
              <div class="panel-header black-header">About Me:</div>
              <table class="panel-table">
                <tr><th>#</th><th>Play</th></tr>
                {Array.from({ length: 10 }).map((_, i) => (
                  <tr><td>{i + 1}</td><td></td></tr>
                ))}
              </table>
            </section>

            <section class="panel">
              <div class="panel-header green-header">PLAYERS NOT PLAYS! (RUNS)</div>
              <table class="panel-table">
                <tr><th>Player</th><th>Notes</th></tr>
                <tr><td>STOCK</td><td></td></tr>
                {Array.from({ length: 4 }).map(() => (
                  <tr><td></td><td></td></tr>
                ))}
              </table>
            </section>

            <section class="panel">
              <div class="panel-subheader grey-subheader">CRUZ</div>
              <table class="panel-table small">
                {Array.from({ length: 5 }).map((_, i) => (
                  <tr><td>{i + 1}</td><td></td></tr>
                ))}
              </table>
            </section>

            <section class="panel">
              <div class="panel-subheader grey-subheader">BY</div>
              <table class="panel-table small">
                {Array.from({ length: 5 }).map((_, i) => (
                  <tr><td>{i + 1}</td><td></td></tr>
                ))}
              </table>
            </section>

          </div>

          <!-- MIDDLE COLUMN -->
          <div class="col col-middle">

            <section class="panel tall">
              <div class="panel-header yellow-header">1st &amp; 10</div>
              <div class="three-col-headings">
                <span>Left</span><span>Middle</span><span>Right</span>
              </div>
              <div class="three-col-body">
                {Array.from({ length: 10 }).map(() => (
                  <>
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                  </>
                ))}
              </div>
            </section>

            <section class="panel tall">
              <div class="panel-header yellow-header">2nd and 7–10</div>
              <div class="three-col-headings">
                <span>Left</span><span>Middle</span><span>Right</span>
              </div>
              <div class="three-col-body">
                {Array.from({ length: 5 }).map(() => (
                  <>
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                  </>
                ))}
              </div>
            </section>

            <section class="panel tall">
              <div class="panel-header yellow-header">2nd and 4–6</div>
              <div class="three-col-headings">
                <span>Left</span><span>Middle</span><span>Right</span>
              </div>
              <div class="three-col-body">
                {Array.from({ length: 5 }).map(() => (
                  <>
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                  </>
                ))}
              </div>
            </section>

            <section class="panel tall">
              <div class="panel-header yellow-header">3rd and 7–10</div>
              <div class="three-col-headings">
                <span>Left</span><span>Middle</span><span>Right</span>
              </div>
              <div class="three-col-body">
                {Array.from({ length: 7 }).map(() => (
                  <>
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                  </>
                ))}
              </div>
            </section>

          </div>

          <!-- RIGHT COLUMN -->
          <div class="col col-right">

            <section class="panel">
              <div class="panel-header black-header">First 10</div>
              <table class="panel-table">
                <tr><th>#</th><th>Play</th></tr>
                {Array.from({ length: 10 }).map((_, i) => (
                  <tr><td>{i + 1}</td><td></td></tr>
                ))}
              </table>
            </section>

            <section class="panel">
              <div class="panel-header green-header">Players not Plays (PASS)</div>
              <table class="panel-table">
                <tr><th>Player</th><th>Notes</th></tr>
                <tr><td>STOCK</td><td></td></tr>
                {Array.from({ length: 4 }).map(() => (
                  <tr><td></td><td></td></tr>
                ))}
              </table>
            </section>

            <!-- ⭐ TOPSTERS PANEL ⭐ -->
            <section class="panel topsters-panel">
              <div class="panel-subheader grey-subheader">Topsters – Music</div>
              <div class="topsters-content">
                <img src="/topster.png" alt="Top music collage" />
              </div>
            </section>

          </div>
        </div>
      </div>
    </main>

    <script>
      function updateCentralTime() {
        const now = new Date().toLocaleString("en-US", {
          timeZone: "America/Chicago",
          hour12: true,
          year: "numeric",
          month: "numeric",
          day: "numeric",
          hour: "numeric",
          minute: "numeric",
          second: "numeric",
        });
        document.getElementById("live-date").innerText = now + " CT";
      }
      updateCentralTime();
      setInterval(updateCentralTime, 1000);
    </script>
  </body>
</html>

<style>
  :root {
    --bg-page: #111111;
    --bg-sheet: #ffffff;
    --border: #000000;
    --green-header: #1f7f3b;
    --yellow: #ffe600;
    --grey: #d9d9d9;
  }

  body {
    margin: 0;
    background: var(--bg-page);
    font-family: system-ui, sans-serif;
  }

  .page {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    padding: 1.5rem;
  }

  .sheet {
  background: var(--bg-sheet);
  border: 4px solid var(--border);
  max-width: 1280px;
  max-height: 834px;
  width: 100%;
  box-shadow: 0 25px 60px rgba(0, 0, 0, 0.7);
  height: auto;         
  overflow: hidden;     
}

  /* HEADER */
  .sheet-top {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    background: #000;
    color: #fff;
    border-bottom: 4px solid var(--border);
  }

  .sheet-top-left,
  .sheet-top-right {
    padding: 0.4rem 0.8rem;
    display: flex;
    flex-direction: column;
    font-size: 0.8rem;
  }

  .sheet-title {
    font-size: 1.8rem;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-align: center;
    padding-top: 0.25rem;
  }

  .small-label {
    font-weight: 600;
  }

  .game-name,
  .game-date {
    margin-top: 0.15rem;
    font-weight: 700;
    background: #fff;
    color: #000;
    padding: 0.15rem 0.35rem;
  }

  /* MAIN GRID */
  .sheet-grid {
    display: grid;
    grid-template-columns: 260px 1fr 260px;
  }

  .col {
    border-left: 4px solid var(--border);
  }

  .col:first-child {
    border-left: none;
  }

  .panel {
    border-bottom: 4px solid var(--border);
  }

  .panel-header {
    padding: 0.2rem;
    font-weight: 800;
    text-align: center;
    text-transform: uppercase;
    border-bottom: 2px solid var(--border);
    font-size: 0.85rem;
  }

  .black-header { background: black; color: white; }
  .green-header { background: var(--green-header); color: white; }
  .yellow-header { background: var(--yellow); color: black; }

  .panel-subheader {
    padding: 0.3rem;
    font-weight: 700;
    background: var(--grey);
    border-bottom: 2px solid var(--border);
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  .panel-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.75rem;
  }

  .panel-table th,
  .panel-table td {
    border: 1px solid #000;
    padding: 0.1rem 0.25rem;
    height: 20px;
  }

  /* THREE COLUMN MID-SECTION */
  .three-col-headings {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    text-align: center;
    background: #f0f0f0;
    border-bottom: 1px solid #000;
  }

  .three-col-body {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .three-col-body .cell {
    border-left: 1px solid #000;
    border-bottom: 1px solid #000;
    min-height: 1.25rem;
  }

  .three-col-body .cell:nth-child(3n + 1) {
    border-left: none;
  }

  /* ⭐ TOPSTER PANEL ⭐ */
  .topsters-panel {
    min-height: 250px;
    display: flex;
    flex-direction: column;
  }

  .topsters-content {
    flex: 1;
    padding: 0.25rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .topsters-content img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    display: block;
  }

</style>